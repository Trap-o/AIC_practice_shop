<Window x:Class="AIC_shop.screens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIC_shop.screens"
        mc:Ignorable="d"
        Title="Store" Height="300" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" Icon="/img/shopping-cart_3916627.png">
    <Grid Background="BlanchedAlmond">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Sell" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5,20,5"
                Background="#D2CDFF" Click="Button_Click_1" FontWeight="Bold"/>
        <Button Content="Manage" FontSize="25" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5,20,5"
                Background="#CDFAFF" Click="Button_Click" FontWeight="Bold"/>
    </Grid>
</Window>
